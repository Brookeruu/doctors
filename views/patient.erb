<h2>Patient Details</h2>
<a href="/admin">Back to Admin</a>
<h3><%= @patient.name %></h3>
<p>Birthdate: <%= @patient.birthdate %></p>
<p>Current Doctor: <%= @doctor_name %></p>

<form class="form-group" action="/patients/<%= @patient.id %>" method="post">
  <h4>Assign a doctor:</h4>
  <div class="add_person">
    <select name="doc_id">
      <% @doctors.each do |doctor| %>
        <option value="<%= doctor.id %>"><%= doctor.name %></option>
      <% end %>
  </select>

  </div>
  <button type="submit" class="btn btn-danger">Assign Doctor</button>
</form>
